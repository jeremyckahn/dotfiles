// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "pane_split_direction_vertical": "right",
  "pane_split_direction_horizontal": "down",
  "use_autoclose": false,
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "features": {
    "inline_completion_provider": "none"
  },
  "buffer_font_family": "Hack Nerd Font Mono",
  "buffer_font_size": 14,
  "buffer_line_height": "standard",
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "llama3.2-3b-instruct"
    },
    "version": "2"
  },
  "language_models": {
    "ollama": {
      "low_speed_timeout_in_seconds": 600
    },
    "openai": {
      "api_url": "http://127.0.0.1:1337/v1",
      "low_speed_timeout_in_seconds": 600,
      "available_models": [
        {
          "name": "llama3.2-3b-instruct",
          "display_name": "llama3.2 3B",
          "max_tokens": 131072
        },
        {
          "name": "qwen2.5-coder_3b",
          "display_name": "qwen2.5 Coder 3B",
          "max_tokens": 16384,
          "max_output_tokens": 16384
        },
        {
          "name": "qwen2.5-coder-7b-instruct",
          "display_name": "qwen2.5 Coder 7B",
          "max_tokens": 16384,
          "max_output_tokens": 16384
        },
        {
          "name": "qwen2.5-14b-instruct",
          "display_name": "qwen2.5 Coder 14B",
          "max_tokens": 16384,
          "max_output_tokens": 16384
        },
        {
          "name": "qwen2.5-coder_32b-instruct-q4_K_M",
          "display_name": "qwen2.5 Coder 32B",
          "max_tokens": 16384,
          "max_output_tokens": 16384
        }
      ],
      "version": "1"
    }
  },
  "vim_mode": true,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Github Dark"
  },
  "terminal": {
    "font_family": "Hack Nerd Font Mono",
    "font_size": 12,
    "line_height": "standard"
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  }
}
